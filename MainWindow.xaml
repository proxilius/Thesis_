<Window x:Class="SimaSzamlaAdatbazissal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimaSzamlaAdatbazissal"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="798.775">
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="484*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="-10,10,10,-10" >
            <TextBox x:Name="Osszesen"  HorizontalAlignment="Left" Height="26" Margin="10,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Új tétel hozzáadaása" VerticalAlignment="Top" RenderTransformOrigin="-0.653,-0.219" Height="26" Width="208" Foreground="#FF231D1D" FontWeight="Bold" TextDecorations="{x:Null}" FontFamily="Times New Roman" FontSize="16"/>
            <Button x:Name="button" Content="Hozzáad" HorizontalAlignment="Left" Margin="11,105,0,0" VerticalAlignment="Top" Width="189" FontFamily="Times New Roman" FontWeight="Bold" FontStyle="Italic" FontSize="14" Click="HozzaAd"/>
            <Button x:Name="buttonDelete" Content="Tétel törlés" HorizontalAlignment="Left" Margin="9,199,0,0" VerticalAlignment="Top" Width="190" Click="DeleteRow" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,233,0,0" TextWrapping="Wrap" Text="Összesen" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="30" Width="189" TextDecorations="Underline"/>
            <Label x:Name="label" Content="Új tétel hozzáadásához &#xD;&#xA;kattintson a&quot;Hozzáad&quot; &#xD;&#xA;gombra!" HorizontalAlignment="Left" Margin="11,36,0,0" VerticalAlignment="Top" Height="64" Width="189" FontFamily="Times New Roman" FontSize="15"/>
            <Label x:Name="label_Copy" Content="Tétel törléséhez jelölje ki&#xD;&#xA;a törölni kivánt tételt, és&#xD;&#xA;kattinson a &quot;Törlés&quot; gomra!" HorizontalAlignment="Left" Margin="11,130,0,0" VerticalAlignment="Top" Height="64" Width="189" FontFamily="Times New Roman" FontSize="15"/>


        </Grid>

        <DataGrid Grid.Column="1" x:Name="SzamlaDatagrid" HorizontalAlignment="Left" AutoGenerateColumns="False" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.667,1.231" Grid.ColumnSpan="2" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" ClipboardContentBinding="{x:Null}" Foreground="#FFA04747" Width="*" Header="ID"/>
                <DataGridTextColumn Binding="{Binding Megnevezes}" ClipboardContentBinding="{x:Null}" Foreground="#FFA04747" Width="*" Header="Név"/>
                <DataGridTextColumn Binding="{Binding Osszeg}" ClipboardContentBinding="{x:Null}" Foreground="#FFA04747" Width="*" Header="Összeg"/>
                <DataGridTextColumn Binding="{Binding Datum}" ClipboardContentBinding="{x:Null}" Foreground="#FFA04747" Width="*" Header="Dátum"/>
            </DataGrid.Columns>

        </DataGrid>

        <Grid Grid.Column="3">
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126"><Run FontWeight="Bold" FontSize="16" FontFamily="Times New Roman" Text="Exportálás excel munkafüzetbe"/><LineBreak/><Run/></TextBlock>
            <Button x:Name="button1" Content="Export" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="126" Click="exportDataToExcel"/>

        </Grid>

    </Grid>
</Window>
